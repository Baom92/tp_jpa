<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="TP_JPA_PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.bootcamp.Entites.Bailleur</class>
    <class>com.bootcamp.Entites.Beneficiaire</class>
    <class>com.bootcamp.Entites.Fournisseur</class>
    <class>com.bootcamp.Entites.IndicateurPerformance</class>
    <class>com.bootcamp.Entites.IndicateurQualitatif</class>
    <class>com.bootcamp.Entites.IndicateurQuantitatif</class>
    <class>com.bootcamp.Entites.Livrable</class>
    <class>com.bootcamp.Entites.Programme</class>
    <class>com.bootcamp.Entites.Projet</class>
    <class>com.bootcamp.Entites.Personne</class>
    <class>com.bootcamp.Entites.Bailleur_has_Programme</class>
    <class>com.bootcamp.Entites.Bailleur_has_Projet</class>
    <class>com.bootcamp.Entites.Beneficiaire_has_Projet</class>
    <class>com.bootcamp.Entites.Programme_has_Beneficiaire</class>
    <class>com.bootcamp.Entites.Programme_has_Fournisseur</class>
    <class>com.bootcamp.Entites.Projet_has_Fournisseur</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jpa_tp?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="TP_JPA_PU_2" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.bootcamp.Entites.Bailleur</class>
    <class>com.bootcamp.Entites.Beneficiaire</class>
    <class>com.bootcamp.Entites.Fournisseur</class>
    <class>com.bootcamp.Entites.IndicateurPerformance</class>
    <class>com.bootcamp.Entites.IndicateurQualitatif</class>
    <class>com.bootcamp.Entites.IndicateurQuantitatif</class>
    <class>com.bootcamp.Entites.Livrable</class>
    <class>com.bootcamp.Entites.Programme</class>
    <class>com.bootcamp.Entites.Projet</class>
    <class>com.bootcamp.Entites.Personne</class>
    <class>com.bootcamp.Entites.Bailleur_has_Programme</class>
    <class>com.bootcamp.Entites.Bailleur_has_Projet</class>
    <class>com.bootcamp.Entites.Beneficiaire_has_Projet</class>
    <class>com.bootcamp.Entites.Programme_has_Beneficiaire</class>
    <class>com.bootcamp.Entites.Programme_has_Fournisseur</class>
    <class>com.bootcamp.Entites.Projet_has_Fournisseur</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby:target/jpa_tp2;create=true"/>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jpa_tp?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
